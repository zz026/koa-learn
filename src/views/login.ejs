<%- include('./components/header', {
	title: '首页',
	keywords: '首页',
	description: '首页'
}) %>
<h3>登录页面</h3>
<style>
	form {
		width: 500px;
		margin: 20px auto;
	}
</style>
<form>
  <div class="form-group">
    <label for="userName">用户名</label>
    <input type="text" class="form-control" name="userName" placeholder="请输入用户名" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="password">密码</label>
    <input type="password" class="form-control" name="password" placeholder="请输入密码" autocomplete="off">
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> 记住密码
    </label>
	</div>
  <button type="submit" class="btn btn-primary" id="btn-submit">登 录</button>
</form>

<%- include('./components/footer.ejs') %>

<script>
	$(function() {
		$('#btn-submit').on('click', function(e) {
			e.preventDefault()
			var userName = $('input[name=userName]').val()
			var password = $('input[name=password]').val()
			if (!userName || !password) {
				toastr.warning('请输入账号及密码');
			}
			$.post('/api/user/login', {
				userName,
				password
			}, function(res) {
				if (res.code === 0) {
					toastr.success('登录成功！');
				}
			})
		})
	})
</script>